.md-base
  margin 10px 0
  padding 10px 10px
  border-radius 5px

.success
  @extend .md-base
  color #3A6F3A
  background-color #DAEDD2

.info
  @extend .md-base
  color #2B6584
  background-color #D3EAF6

.warning
  @extend .md-base
  color #AF9C75
  background-color #FCF7DF

.danger
  @extend .md-base
  color #9F3B3A
  background-color #F0D9D9
